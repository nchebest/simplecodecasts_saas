<div class="row">
  <div class="col-md-3 text-center">
    <%= image_tag @user.profile.avatar.url, class: "avater_show_img" %>
    
  </div>
  <div class="col-md-6">
    <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
    <h3><span class="job_title_icon"><%= job_title_icon %></span><%= @user.profile.job_title %></h3>
    <div class="well profile-block profile_description">
      <h3>Profile Description</h3>
       <%= @user.profile.description %></br>
    </div>
    <% if true #current_user.plan_id == 2 %>
      <div class="well profile-block contact_info">
        <h3>Contact Information</h3>
       <h4>Phone: <%= @user.profile.phone_number %></h4>
        <h4>Email: <%= @user.profile.contact_email %></h4>
      </div>
    <% end %>
  </div>
</div>