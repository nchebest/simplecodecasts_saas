<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1>Dev Match Community</h1>
    <p>Welcome to Dev Match Community, You must fill out your profile to be able to belong to Dev Match Community.</p>
    <ul class="list-unstyled">
      <% @users.each do |user| %>
        <% if user.profile %>
          <li>
            <div class="well row <%= cycle('white-bg', ' ') %>"> 
              
              <div class="col-sm-3 text_center">
                <% if user.profile.avatar %>
                  <%= link_to user do %>
                    <%= image_tag user.profile.avatar.url(:thumb), class: 'index-avatar-img' %><br>
                  <% end %>
                <% end %>
              </div>
              <div>
                <%= link_to user do %>
                  <h1><%= user.profile.first_name %> <%= user.profile.last_name %></h1>
                <% end %>
                <p><%= user.profile.job_title %>
                  <% if user.plan_id == 2 %>
                    <span class="label label-danger">PRO</span>
                    <% else %>
                    <span class="label label-success">Basic</span>
                  <% end %>
                </p>
                
              </div>
              
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>